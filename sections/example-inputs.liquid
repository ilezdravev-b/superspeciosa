<!-- sections/example-inputs.liquid -->

{% comment %}
    This is an example of all inputs on the site and how their
    classes work.
{% endcomment %}

<div class="container-text section">

	{% comment %}
        Standard Product Options / Pill Buttons
    {% endcomment %}

    <fieldset class="style-guide__fieldset">
        <legend class="style-guide__heading">
            <h2>Standard Product Options / Pill Buttons</h2>
        </legend>

        {%- for num in (1..4) -%}

			<div class="input-pill">
				<input type="radio"
					name="pillButtons"
					value="value{{ num }}"
					id="pill{{ num }}"
					{% if forloop.first %}checked{% endif %}{% if forloop.last %}disabled{% endif %}
				/>

				<label for="pill{{ num }}">
					Option {{ num }}
				</label>
			</div>

        {%- endfor -%}

    </fieldset>

	{% comment %}
        Color Swatches
    {% endcomment %}

    <fieldset class="style-guide__fieldset">
        <legend class="style-guide__heading">
            <h2>Color Swatches</h2>
        </legend>

		{% assign colors = '#1d8ec7,#f8788d,#7538c2' | split: ',' %}

        {%- for num in (1..3) -%}

			<div class="input-swatch">
				<input type="radio"
					name="colorSwatches"
					value="value{{ num }}"
					id="radio{{ num }}"
					{% if forloop.first %}checked{% endif %}
				/>

				<label for="radio{{ num }}">
					<div class="swatch" style="background-color:{{ colors[forloop.index0] }};"></div>
					<span class="sr-only">
						Option {{ num }}
					</span>
				</label>
			</div>

        {%- endfor -%}
    </fieldset>

    {% comment %}
        Checkboxes
    {% endcomment %}

	<fieldset class="style-guide__fieldset">
        <legend class="style-guide__heading">
            <h2>Checkboxes</h2>
        </legend>

		{%- for num in (1..3) -%}
			<div class="input-checkbox">
				<input type="checkbox" id="checkbox-{{ num }}" {% if forloop.first %}checked{% endif %}>
				<label for="checkbox-{{ num }}">Checkbox {{ num }}</label>
			</div>
		{%- endfor -%}

	</fieldset>

    {% comment %}
        Radio Buttons
    {% endcomment %}

	<fieldset class="style-guide__fieldset">
        <legend class="style-guide__heading">
            <h2>Radio Buttons</h2>
        </legend>

		{%- for num in (1..3) -%}
			<div class="input-radio">
				<input type="radio" id="radio-{{ num }}" name="example-radio" {% if forloop.first %}checked{% endif %}>
				<label for="radio-{{ num }}">Radio {{ num }}</label>
			</div>
		{%- endfor -%}

	</fieldset>

	{% comment %}
		Quantity Input
	{% endcomment %}

	<h2 class="style-guide__heading">Quantity Input</h2>

	{% assign product = all_products[0] %} 
	{% render 'product-qty', qtyID: product.id %}

    {% comment %}
        Other Form fields (text inputs, etc)
    {% endcomment %}

    <h2 class="style-guide__heading">Text/Select Fields</h2>

	<div class="style-guide__inputs">
		<div class="input-group">
			<label for="text-input">Text Input</label>
			<input type="text" 
				id="text-input" 
				name="text_field" 
				placeholder="Placeholder text" 
				value="" 
				autocorrect="off" 
				autocapitalize="off" />
		</div>

		<div class="input-group">
			<label for="email-input">Email Input</label>
			<input type="email" 
				id="email-input" 
				name="email_field" 
				placeholder="you@silverponies.com" 
				value="" 
				autocorrect="off" 
				autocapitalize="off" />
		</div>

		<div class="input-group">
			<label for="textarea-input">Textarea Input</label>
			<textarea id="textarea-input" 
				name="textarea_field" 
				placeholder="Message" 
				rows="10"></textarea>
		</div>

		{% comment %}
			Select
		{% endcomment %}

		<div class="input-group">
			<label for="example-select">Select Dropdown</label>
			<div class="input-select">
				<select id="example-select">
					{%- for num in (1..3) -%}
						<option value="value{{ num }}"{% if forloop.first %} selected="selected"{% endif %}>Option {{ num }}</option>
					{%- endfor -%}
				</select>
			</div>
		</div>

		{% comment %}
			Nested Input
		{% endcomment %}

		<div class="input-group input-nested">
			<label for="nestedInputEmail">Nested Input</label>
			<input type="email" name="email" id="nestedInputEmail">
			<button type="submit" class="btn btn--icon">
				<span class="sr-only">
					Submit 
				</span>
				{% render 'icon-search', class: 'icon icon--medium' %}
			</button>
		</div>

		{% comment %}
			Moving Label

			Notes: Label must come after the input for this to
				   work correctly. Placeholder attribute must
				   exist on the input - it can be a blank space,
				   or a true placeholder. Either way, it will be invisible.
		{% endcomment %}

		<div class="input-group input-nested label-moves">
			<input type="email" name="email" id="movingLabel" placeholder=" ">
			<label for="movingLabel">Moving Label</label>
			<button type="submit" class="btn btn--icon">
				<span class="sr-only">
					Submit 
				</span>
				{% render 'icon-search', class: 'icon icon--medium' %}
			</button>
		</div>

		{% comment %}
			One-Line Input
		{% endcomment %}

		<div class="input-group input-line">
			<label for="oneLineInputEmail">One-Line Input</label>
			<input type="email" name="email" id="oneLineInputEmail">
			<button type="submit" class="btn btn--primary btn--wide">Subscribe</button>
		</div>

		{% comment %}
			Password Input with Reveal
		{% endcomment %}

		<div class="input-group input-password">
			<label for="password-reveal">Password with Reveal</label>
			<div class="input-sublink">
				<a href="#">Forgot your password?</a>
			</div>
			<input type="password" 
				id="password-reveal" 
				name="text_field" 
				autocomplete="current-password"
				value="" 
				autocorrect="off" 
				autocapitalize="off" />
			<button type="button" class="btn input-password__reveal js-password-reveal">
				<span class="sr-only">Toggle Password Visibility</span>
			</button>
		</div>

		{% comment %}
			Password Input with Reveal - Error State
		{% endcomment %}

		<div class="input-group input-password input-group--error">
			<label for="password-reveal-error">Password with Reveal: Error State</label>
			<div class="input-sublink">
				<a href="#">Forgot your password?</a>
			</div>
			<input type="password" 
				id="password-reveal-error" 
				name="text_field" 
				autocomplete="current-password"
				value="" 
				autocorrect="off" 
				autocapitalize="off" />
			<button type="button" class="btn input-password__reveal js-password-reveal">
				<span class="sr-only">Toggle Password Visibility</span>
			</button>

			<div class="input-subtext">
				Error microcopy goes here
			</div>
		</div>
	</div>
</div>

{% schema %}
    {
        "name": "Example Inputs",
        "tag": "section"
    }
{% endschema %}