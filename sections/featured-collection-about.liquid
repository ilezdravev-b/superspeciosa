
{% style %}
    .bg-{{ section.id }} {
      background-color: {{ section.settings.bg_color }};
    }
    .title-color-{{ section.id }} {
      color: {{ section.settings.header_title_color }};
    }
    .sec-title-{{ section.id }} {
      color: {{ section.settings.sec_title_color }};
    }
    .content-color-{{ section.id }} {
      color: {{ section.settings.content_color }};
    }
    @media(max-width: 768px) {
        .featured-about-wrapper {
            padding-top: {{ section.settings.m_padding_top }}px;
            padding-bottom: {{ section.settings.m_padding_bottom }}px;
        }
    }
{% endstyle %}

{{ 'featured-about.css' | asset_url | stylesheet_tag }}
<div class="featured-about-wrapper featured-about-bg--fixed" style="background-image: url({{ section.settings.bg_image.src |  image_url: width: 2400 }})">
    <div class="featured-about-header-wrapper bg-{{ section.id }}">
        <div class="featured-about-header container">
            <div class="header-text-section">
                <h2 class="header-with-text__title title-color-{{ section.id }}">{{ section.settings.title }}</h2>
                <p class="header-with-text__content content-color-{{ section.id }}">{{ section.settings.content }}<a class="header-title title-color-{{ section.id }}" href="{{ section.settings.link }}">{{ section.settings.link_text }}</a>.</p>
            </div>
            <div class="header-image-section">
                <img class="featured-about-mark" src="{{ section.settings.image | img_url: 'medium' }}" alt="brand image" width="{{ section.settings.image.width }}" height="{{ section.settings.image.height }}">
            </div>
        </div>
    </div>
    <div class="featured-about-body container">
        <div class="body-text-section bg-{{ section.id }} body-text-bg--right" style="background-image: url({{ section.settings.body_bg_img |  image_url: width: auto }})">
            <div class="header-with-text__title sec-title-{{ section.id }}"><span>{{ section.settings.body_title }}</span></div>
            <div class="header-with-text__content-wrapper"><p class="header-with-text__content content-color-{{ section.id }}">{{ section.settings.body_text }}</p></div>
            <div class="about-body--btn">
                <div class="about-body--btn__bg">
                    <a class="btn_text" href="{{ section.settings.btn_link }}">
                        <p class="btn">{{ section.settings.btn_title }}</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
