    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 1px;
    background-color: #8ab83f;
    display: block;
    border: 2px solid #8ab83f;
    width: fit-content;
    margin: 10px 0 0;
    padding: 12px 24px;
    font-family: 'Dilemma', sans-serif;
    font-weight: 600;
    border-radius: 0;
    color: #212c1c;
}
.image-text-wrapper .rich-text-content a.button-prime:hover {
    border-color: #212c1c !important;
}
.image-text-wrapper .rich-text-content a.btn.button:hover {
    border-color: #f4f1de;
    color: #212c1c;
}
.image-text-wrapper .rich-text-content a.btn.button.button-second {
    color: #f4f1de;
    background-color: #212c1c;
    border-color: #212c1c;
}
.image-text-wrapper  .rich-text-content a.btn.button.button-second:hover {
    border-color: #8ab83f;
}
.image-text-wrapper  .buttons-block {
    display: flex;
    justify-content: start;
    gap: 15px;
    flex-wrap: wrap;
}
.main-page-heading {
    padding: 30px;
}
.main-page-heading h1 {
    font-size: 50px;
    color: #231f20;
    line-height: 55px;
    font-family: 'Dilemma', sans-serif;
    text-align: center;
    margin: auto;
    font-weight: 700;
    padding: 10px;
}
.image-text-wrapper .img-text-flex {
    display: flex;
}
.image-text-wrapper  .text-side {
    font-size: 15px;
    line-height: 24px;
    padding: 10px;
    color: #333;
}
.image-text-wrapper  .media-side {
    width: 100%;
    max-width: 350px;
    padding: 10px;
}
.image-text-wrapper .media-side img {
    display: block;
    width: 100%;
}
.image-text-wrapper .text-side p {
    margin: 0 0 15px;
}
.image-text-wrapper .text-side p a {
    color: #8ab83f;
}
.image-text-wrapper .text-side p a:hover {
    color: currentColor;
}
  
  
@media (max-width: 767px) {
  .image-text-wrapper .rich-text-content h2.heading {
    font-size: 35px;
    text-align: center !important;
    line-height: 35px;
  }
  .image-text-wrapper .rich-text-content p.subheading {
    font-size: 18px;
    line-height: 18px;
    text-align: center;
  }
  .image-text-wrapper .img-text-flex {
    flex-direction: column;
  }
  .image-text-wrapper  .page-width {
    padding: 0 30px !important;
  }
  .image-text-wrapper .rich-text-content a.btn.button {
    width: 100%;
  }
}
</style>

