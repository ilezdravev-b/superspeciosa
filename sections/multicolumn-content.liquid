<div class="multicolumn-content section-{{ section.id }}">
  <div class="{% if section.settings.enable_full %}full-page-width{% else %}{% if section.settings.narrow_width %}page-narrow-width page-width{% else %}page-width{% endif %}{% endif %}">
    <div class="rich-text-content">
      {% if section.settings.heading != blank %}
        <h2 class="heading">{{ section.settings.heading }}</h2>
      {% endif %}
    </div>
    <div class="multicolumn-wrapper">
      {% for block in section.blocks %}
      <div class="multicolumn-item">
        {% if block.settings.heading_side != blank %}
        <div class="heading-side">
          <h2>{{ block.settings.heading_side }}</h2>
        </div>
        {% endif %}
        {% if block.settings.content != blank %}
        <div class="text-side">
          {{ block.settings.content }}
        </div>
        {% endif %}
      </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
}
@media (max-width: 749px) {
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }
}
</style>

{% schema %}
  {
    "name": "Multicolumn Content",
    "settings": [
      {
        "type": "header",
        "content": "Header"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Top Spacing",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 20,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Bottom Spacing",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 20,
        "unit": "px"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      },
      {
        "type": "range",
        "id": "padding_top_mobile",
        "label": "Top Spacing Mobile",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 10,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom_mobile",
        "label": "Bottom Spacing Mobile",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 10,
        "unit": "px"
      },
      {
        "type": "checkbox",
        "id": "narrow_width",
        "label": "Narrow Width",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "enable_full",
        "default": false,
        "label": "Enable Full Width"
      }
    ],
    "blocks": [
      {
        "type": "block",
        "name": "Block",
        "settings": [
          {
            "type": "header",
            "content": "Multicolumn"
          },
          {
            "type": "text",
            "id": "heading_side",
            "label": "Heading"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Multicolumn Content"
      }
    ]
  }
{% endschema %}

<style>
.multicolumn-content .page-width {
    max-width: 1140px;
    margin: auto;
    padding: 10px;
}
.multicolumn-content .rich-text-content h2.heading {
    font-size: 35px;
    font-weight: bold;
    letter-spacing: 1px;
    color: #231f20;
    margin: 0 0 20px;
    word-spacing: 3px;
    line-height: 35px;
    text-align: left;
    font-family: 'Dilemma', sans-serif;
}
.multicolumn-content .multicolumn-wrapper {
    display: flex;
}
.multicolumn-content .multicolumn-item {
    padding: 10px 20px 10px 0px;
}
.multicolumn-content .multicolumn-item h2 {
    font-size: 35px;
    font-weight: bold;
    letter-spacing: 1px;
    color: #231f20;
    margin: 0 0 20px;
    word-spacing: 3px;
    line-height: 35px;
    text-align: left;
    font-family: 'Dilemma', sans-serif;
}
.multicolumn-content .multicolumn-item .text-side p {
    font-size: 15px;
    line-height: 24px;
    color: #333;
    margin: 0 0 15px;
}
  
  
@media (max-width: 767px) {
  .multicolumn-content .rich-text-content h2.heading {
    font-size: 35px;
  }
  .multicolumn-content  .page-width {
    padding: 0 30px;
  }
  .multicolumn-content .multicolumn-wrapper {
    flex-direction: column;
  }
}
</style>

