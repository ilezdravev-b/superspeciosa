<div class="rich-text section-{{ section.id }}">
  <div class="{% if section.settings.enable_full %}full-page-width{% else %}{% if section.settings.narrow_width %}page-narrow-width page-width{% else %}page-width{% endif %}{% endif %}">
    <div class="rich-text-content">
      {% if section.settings.subheading != blank %}
        <p class="subheading">{{ section.settings.subheading }}</p>
      {% endif %}
      {% if section.settings.heading != blank %}
        <h2 class="heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.content != blank %}
        <div class="content">{{ section.settings.content }}</div>
      {% endif %}
      {% if section.settings.button != blank %}
        <a href="{{ section.settings.btn_url }}" class="btn button">{{ section.settings.button }}</a>
      {% endif %}
    </div>
  </div>
</div>

<style>
.section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
}
@media (max-width: 749px) {
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }
}
</style>

{% schema %}
  {
    "name": "Rich Text Section",
    "settings": [
      {
        "type": "text",
        "id": "subheading",
        "label": "Sub Heading"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      },
      {
        "type": "text",
        "id": "button",
        "label": "Button"
      },
      {
        "type": "url",
        "id": "btn_url",
        "label": "Button Link"
      },
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Top Spacing",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 20,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Bottom Spacing",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 20,
        "unit": "px"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      },
      {
        "type": "range",
        "id": "padding_top_mobile",
        "label": "Top Spacing Mobile",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 10,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom_mobile",
        "label": "Bottom Spacing Mobile",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 10,
        "unit": "px"
      },
      {
        "type": "checkbox",
        "id": "narrow_width",
        "label": "Narrow Width",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "enable_full",
        "default": false,
        "label": "Enable Full Width"
      }
    ],
    "presets": [
      {
        "name": "Rich Text Section"
      }
    ]
  }
{% endschema %}

<style>
.rich-text .page-width {
    max-width: 1140px;
    margin: auto;
    padding: 20px;
}
.rich-text-content {
    background: #212c1c;
    border-top: 6px solid #e8eaee;
    box-shadow: 0px 0px 24px 0px rgba(0,0,0,.5);
    padding: 5%;
    text-align: center;
}
.rich-text-content p.subheading {
    margin: 0;
    font-size: 18px;
    text-transform: uppercase;
    letter-spacing: 6px;
    word-spacing: 3px;
    font-family: 'Dilemma', sans-serif;
    font-weight: 600;
    color: #8ab83f;
    margin: 0 0 20px;
}
.rich-text-content .content p {
    font-size: 15px;
    font-weight: 500;
    line-height: 24px;
    letter-spacing: -.3px;
    color: #f4f1de;
    margin: 0 0 15px;
}
.rich-text-content h2.heading {
    font-size: 79px;
    font-weight: bold;
    letter-spacing: 1.5px;
    color: #f4f1de;
    margin: 0 0 20px;
    word-spacing: 3px;
    line-height: 1;
}
.rich-text-content a.btn.button {
    font-size: 15px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #f4f1de;
    background-color: #8ab83f;
    display: block;
    border: 2px solid #212c1c;
    width: fit-content;
    margin: 30px auto 0;
    padding: 15px 30px;
    font-family: 'Dilemma', sans-serif;
    font-weight: 600;
    border-radius: 0;
}
.rich-text-content a.btn.button:hover {
    border-color: #f4f1de;
    color: #212c1c;
}
@media (max-width: 767px) {
  .rich-text-content h2.heading {
    font-size: 48px;
  }
  .rich-text-content p.subheading {
    font-size: 13px;
  }
  .rich-text .page-width {
    padding: 6px;
  }
  .rich-text-content a.btn.button {
    width: 100%;
  }
}
</style>

