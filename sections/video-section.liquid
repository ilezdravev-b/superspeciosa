<div class="image-text-wrapper section-{{ section.id }}">
  <div class="{% if section.settings.enable_full %}full-page-width{% else %}{% if section.settings.narrow_width %}page-narrow-width page-width{% else %}page-width{% endif %}{% endif %}">
    <div class="rich-text-content">
      {% if section.settings.heading != blank %}
        <h2 class="heading">{{ section.settings.heading }}</h2>
      {% endif %}
    </div>
    <div class="video-block-wrapper">
      
      <div class="vimeo-video">
      <iframe src="https://player.vimeo.com/video/825865157?h=d24209fa4a&color=8cb93f" width="640" height="360" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
      </div>
    </div>
  </div>
</div>

<style>
.section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
}
@media (max-width: 749px) {
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }
}
</style>

{% schema %}
  {
    "name": "Video Section",
    "settings": [
      {
        "type": "header",
        "content": "Header"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "header",
        "content": "Video"
      },
      {
        "type": "text",
        "id": "video",
        "label": "Video"
      },
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Top Spacing",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 20,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Bottom Spacing",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 20,
        "unit": "px"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      },
      {
        "type": "range",
        "id": "padding_top_mobile",
        "label": "Top Spacing Mobile",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 10,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom_mobile",
        "label": "Bottom Spacing Mobile",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 10,
        "unit": "px"
      },
      {
        "type": "checkbox",
        "id": "narrow_width",
        "label": "Narrow Width",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "enable_full",
        "default": false,
        "label": "Enable Full Width"
      }
    ],
    "presets": [
      {
        "name": "Video Section"
      }
    ]
  }
{% endschema %}

<style>
.image-text-wrapper .page-width {
    max-width: 1140px;
    margin: auto;
    padding: 10px;
}
.image-text-wrapper .rich-text-content h2.heading {
    font-size: 35px;
    font-weight: bold;
    letter-spacing: 1px;
    color: #231f20;
    margin: 0 0 20px;
    word-spacing: 3px;
    line-height: 35px;
    text-align: left;
    font-family: 'Dilemma', sans-serif;
}
.video-block-wrapper iframe {
    width: 100%;
    height: 650px;
}
  
  
@media (max-width: 767px) {
  .image-text-wrapper .rich-text-content h2.heading {
    font-size: 35px;
  }
  .image-text-wrapper  .page-width {
    padding: 6px;
  }
  .video-block-wrapper iframe {
    width: 100%;
    height: 100%;
  }
}
</style>

