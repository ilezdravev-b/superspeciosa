{%- liquid 
	assign data = section.settings
-%}

<div class="wholesale-form-wrapper section-{{ section.id }}" id="wholesaleForm">
  <div class="{% if section.settings.enable_full %}full-page-width{% else %}{% if section.settings.narrow_width %}page-narrow-width page-width{% else %}page-width{% endif %}{% endif %}">
    <div class="rich-text-content">
      {% if section.settings.heading != blank %}
        <h2 class="heading">{{ section.settings.heading }}</h2>
      {% endif %}
    </div>
    <div class="form-wrapper">
      <div class="content-side">
        {% if section.settings.date != blank %}
        <span class="date">{{ section.settings.date }}</span>
        {% endif %}
        {% if section.settings.content_heading != blank %}
        <h2 class="heading">{{ section.settings.content_heading }}</h2>
        {% endif %}
        {% if section.settings.content != blank %}
        <div class="content">{{ section.settings.content }}</div>
        {% endif %}
      </div>
      <div class="form-side-wrapper">
        {% if section.settings.form_heading != blank %}
        <h2 class="form-heading">{{ section.settings.form_heading }}</h2>
        {% endif %}
        <div class="form-content">
          {% render 'wholesale-form', success: data.success, call_to_action: data.call_to_action %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.bg_color }};
}
@media (max-width: 749px) {
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }
}
</style>

{% schema %}
  {
    "name": "WholeSale Form",
    "settings": [
      {
        "type": "header",
        "content": "Header"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "header",
        "content": "Form Content"
      },
      {
        "type": "text",
        "id": "date",
        "label": "date"
      },
      {
        "type": "text",
        "id": "content_heading",
        "label": "Content Heading"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      },
      {
        "type": "text",
        "id": "form_heading",
        "label": "Form Side Heading"
      },
      {
        "type": "text",
        "id": "call_to_action",
        "label": "Call to action",
        "default": "Send message"
      },
      {
        "type": "richtext",
        "id": "success",
        "label": "Success",
        "default": "<p>Thanks for contacting us! We'll get back to you as soon as possible.</p>"
      },
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Top Spacing",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 20,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Bottom Spacing",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 20,
        "unit": "px"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      },
      {
        "type": "range",
        "id": "padding_top_mobile",
        "label": "Top Spacing Mobile",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 10,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "padding_bottom_mobile",
        "label": "Bottom Spacing Mobile",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 10,
        "unit": "px"
      },
      {
        "type": "checkbox",
        "id": "narrow_width",
        "label": "Narrow Width",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "enable_full",
        "default": false,
        "label": "Enable Full Width"
      }
    ],
    "presets": [
      {
        "name": "WholeSale Form"
      }
    ]
  }
{% endschema %}

