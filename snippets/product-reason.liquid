<!-- snippets/product-reason.liquid -->

{% comment %}
	Required:
		nothing
{% endcomment %}

<div class="product-reason-panel">
    <div class="product-reason-content">
        <h5 class="product-reason-subtitle">{{ subtitle }}</h5>
        <h2 class="product-reason-title">{{ title }}</h2>
        {%- if reason1_title and reason1_text and reason1_icon -%}
            <div class="product-reason-item">
                <div class="product-reason-item-icon">
                    <img src="{{ reason1_icon | image_url }}" 
                        alt="reason1_icon" />
                </div>
                <div class="product-reason-item-desc">
                    <div class="product-reason-item-title">
                        {{reason1_title}}
                    </div>
                    <div class="product-reason-item-content">
                        {{reason1_text}}
                    </div>
                </div>
            </div>
        {% endif %}
        
        {%- if reason2_title and reason2_text and reason2_icon -%}
