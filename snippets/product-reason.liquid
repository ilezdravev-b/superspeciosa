                <div class="product-reason-item-icon">
                    <img src="{{ reason4_icon | image_url }}" 
                        alt="reason4_icon" />
                </div>
                <div class="product-reason-item-desc">
                    <div class="product-reason-item-title">
                        {{reason4_title}}
                    </div>
                    <div class="product-reason-item-content">
                        {{reason4_text}}
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>